    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>10000</WorkToMake>
      <Mass>18</Mass>
    </statBases>
    <thingCategories>
      <li>Beddings</li>
    </thingCategories>
    <recipeMaker>
      <researchPrerequisite>ComplexFurniture</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>LeatherworkerTable</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>
  
   <!-- ==================== Recipes ========================== -->

  <RecipeDef>
    <defName>Make_SimpleBedding</defName>
    <label>make Single Bedding</label>
    <description>Craft 1 single bedding, for simple and industrial beds.</description>
    <jobString>Making Single Bedding.</jobString>
    <ingredients>
      <li>
        <filter>
          <categories>
			<li>BTextiles</li>
			<li>Wools</li>
			<li>Leathers</li>
          </categories>
        </filter>
        <count>60</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>RawCotton</li>
			<li>WoolMegasloth</li>
            <li>WoolMuffalo</li>
            <li>WoolAlpaca</li>
			<li>WoolSheep</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentMedieval</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
	<categories>
		<li>BTextiles</li>
		<li>Wools</li>
		<li>Leathers</li>
	</categories>
	<thingDefs>
		<li>RawCotton</li>
		<li>WoolMegasloth</li>
		<li>WoolMuffalo</li>
		<li>WoolAlpaca</li>
		<li>WoolSheep</li>
		<li>ComponentMedieval</li>
	</thingDefs>
    </fixedIngredientFilter>
    <products>
      <SingleBedding>1</SingleBedding>
    </products>
    <workAmount>6000</workAmount>
	<recipeUsers>
		<li>ElectricTailoringBench</li>
		<li>HandTailoringBench</li>
		<li>LeatherworkerTable</li>
	</recipeUsers>
	<researchPrerequisite>Beds_B1</researchPrerequisite>
  </RecipeDef>
  
