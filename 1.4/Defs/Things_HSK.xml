<Defs>

	<!-- ==== Norbal Bedding ==== -->

  <ThingDef ParentName="BeddingBase">
    <defName>PrimitiveBedding</defName>
    <label>primitive bedding set</label>
    <description>A set of mattress, pillows, linen and blanket for a single bed. Provides comfort and insulates the user while in bed.</description>
    <graphicData>
      <texPath>Things/Beddings/FurBeddingSingle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
	<costList>
		<ComponentMedieval>2</ComponentMedieval>
		<Hay>40</Hay>
	</costList>
    <tradeability>Sellable</tradeability>
	<techLevel>Neolithic</techLevel>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>4000</WorkToMake>
      <Mass>10</Mass>
    </statBases>
    <thingCategories>
      <li>Beddings</li>
    </thingCategories>
    <recipeMaker>
      <researchPrerequisite>Beds_A1</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>LeatherworkerTable</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

